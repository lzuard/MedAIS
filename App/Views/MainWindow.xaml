<Window x:Class="MedApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:MedApp"
        
        DataContext="{Binding MainWindowViewModel,Source={StaticResource Locator}}"
        
        Title="{Binding Title}"
        Height="450" Width="800"
        WindowState="Maximized">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding PreviousViewCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <DockPanel>
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="Prev" Command="{Binding PreviousViewCommand}"/>
            <MenuItem Header="Next" Command="{Binding NextViewCommand}"/>
        </Menu>
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem> Ready </StatusBarItem>
        </StatusBar>
        <Grid>
            <ContentControl Content="{Binding CurrentViewModel}"/>
        </Grid>
    </DockPanel>
</Window>
