<UserControl x:Class="MedApp.Views.PatientView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MedApp.Views"
             mc:Ignorable="d"
             
             DataContext="{Binding PatientViewModel, Source={StaticResource Locator}}" Height="1022" Width="1588">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="112"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- #region Patient Name -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <!-- Outline border -->
            <Border Grid.Column="1" 
                    BorderThickness="1" 
                    CornerRadius="40,40,0,0" 
                    Background="{StaticResource MBlue}" 
                    Margin="23,23,23,-1"
                        >
                <!-- Inline border -->
                <Border BorderThickness="1" 
                        CornerRadius="40,40,0,0" 
                        Background="{StaticResource MWhite}" 
                        Margin="9,9,9,0">
                    <!-- Patient name -->
                    <Viewbox MaxHeight="68" 
                             Stretch="Uniform" 
                             Margin="0" 
                             HorizontalAlignment="Stretch" 
                             VerticalAlignment="Stretch">
                        <TextBlock Text="{Binding MedCardHeader}"/>
                    </Viewbox>
                </Border>
            </Border>
        </Grid>
        <!--#endregion -->
        
        <!--#region WorkArea-->
        <Border Grid.Row="1" 
                BorderThickness="1" 
                CornerRadius="40,0,0,40" 
                Background="#5FB7DC" 
                Margin="23,-1,23,23">

            <!--#region Info-->
            <TabControl Style="{StaticResource TabControlStyle}"
                        SelectedIndex="{Binding SelectedTabItem}">
                <TabItem x:Name="Card">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Resources/Images/CardIcon.png" 
                                   Height="60" 
                                   Margin="10,0,0,0"/>
                            <TextBlock Text="Карта" 
                                       FontSize="26" 
                                       HorizontalAlignment="Center" 
                                       Margin="9"/>
                        </StackPanel>
                    </TabItem.Header>
                    
                    
                </TabItem>
                <!--#endregion-->
                
                <!--#region Analyses-->
                <TabItem x:Name="Analyses" >
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Resources/Images/AnalysesIcon.png" 
                                   Height="60" 
                                   Margin="10,0,0,0"/>
                            <TextBlock Text="Исследования" 
                                       FontSize="26" 
                                       HorizontalAlignment="Center" 
                                       Margin="9"/>
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <!--#endregion-->
                
                <!--#region History-->
                <TabItem x:Name="History">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Resources/Images/HistoryIcon.png" 
                                   Height="60" 
                                   Margin="2,0,0,0"/>
                            <TextBlock Text="История" 
                                       FontSize="26" 
                                       HorizontalAlignment="Center" 
                                       Margin="9"/>
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>

                <!--#endregion-->
                
                <!--#region Info-->
                <TabItem x:Name="Info">
                    <TabItem.Header>
                        <StackPanel Orientation="Horizontal">
                            <Image Source="../Resources/Images/InfoIcon.png" 
                                   Height="60" 
                                   Margin="10,0,0,0"/>
                            <TextBlock Text="Информация" 
                                       FontSize="26" 
                                       HorizontalAlignment="Center" 
                                       Margin="9"/>
                        </StackPanel>
                    </TabItem.Header>
                    <!-- Main grid -->
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <!-- Top left rectangle-->
                        <Border Grid.Row="0"
                                Grid.Column="0"
                                CornerRadius="40,0,0,0"
                                Margin="5"
                                BorderBrush="{StaticResource MBlue}"
                                BorderThickness="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50"/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>

                                </Grid.RowDefinitions>
                                <TextBlock Grid.Row="0"
                                           Text="Основная Информация"
                                           TextAlignment="Center"
                                           VerticalAlignment="Center"
                                           FontSize="30"/>
                                <StackPanel Grid.Row="1"
                                            Orientation="Horizontal"
                                            Margin="10,0,0,0">
                                    <TextBlock Text="Медкарта"
                                               FontSize="28"
                                               VerticalAlignment="Center"/>
                                    <ComboBox Margin="40,10"
                                              Background="White"
                                              ItemsSource="{Binding MedCardsCollection}"
                                        />
                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </TabItem>
            </TabControl>
            <!--#endregion-->
        </Border>
        <!--#endregion WorkArea-->
    </Grid>
</UserControl>
