<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:MedApp.ViewModels"
                    xmlns:views ="clr-namespace:MedApp.Views">


    <DataTemplate DataType="{x:Type vm:AuthViewModel}">
        <views:AuthView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:DoctorsViewModel}">
        <views:DoctorsView DataContext="{Binding}"/>
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:PatientViewModel}">
        <views:PatientView DataContext="{Binding}"/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:AdminViewModel}">
        <views:AdminView DataContext="{Binding}"/>
    </DataTemplate>

</ResourceDictionary>